<!DOCTYPE HTML>
<html lang="en">

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="viewport"
        content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1, viewport-fit=cover" />
    <title>Locker</title>
    <link
        href="https://fonts.googleapis.com/css?family=Roboto:300,300i,400,400i,500,500i,700,700i,900,900i|Source+Sans+Pro:300,300i,400,400i,600,600i,700,700i,900,900i"
        rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/styles/style.css">
    <link rel="stylesheet" type="text/css" href="/styles/framework.css">
    <link rel="stylesheet" type="text/css" href="/fonts/css/fontawesome-all.min.css">
    <link rel="stylesheet" type="text/css" href="/styles/blog.css">

</head>

<body class="theme-light" data-background="none" data-highlight="blue2">

    <div id="page">

        <% include ./inc/header.ejs %>
        <% include ./inc/footer.ejs %>

        <div class="page-content header-clear-medium">

            <link rel="stylesheet" type="text/css" href="/styles/store.css">

            <div class="content-boxed content-boxed-full">
                <div class="single-slider owl-carousel owl-no-dots">
                    <div class="store-slide-1">
                        <a href="#" class="store-slide-image"><img src="/images/products/store1.jpg" alt=""></a>
                        <div class="store-slide-title bottom-15">
                            <h4 class="bottom-0 center-text">New SmartPhone</h4>
                            <span class="color-gray2-dark under-heading center-text font-10">Sport Band, Water Proof,
                                132 GB, Black</span>
                        </div>
                        <div class="store-slide-rating">
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                        </div>
                        <div class="store-slide-price">
                            <strong>$299.99<br> <del>$ 399.99</del></strong>
                            <a href="#"><i class="fa fa-heart color-orange-dark"></i>Add to Wishlist<span
                                    class="color-green1-dark">In Stock - Ships Immediately</span></a>
                            <div class="clear"></div>
                        </div>
                        <div class="store-slide-button">
                            <a id="registerBtn"
                                class="button bg-highlight button-round-large shadow-large button-full button-s uppercase ultrabold">RESERVATION</a>
                        </div>
                    </div>
                    <div class="store-slide-1">
                        <a href="#" class="store-slide-image"><img src="/images/products/store2.jpg" alt=""></a>
                        <div class="store-slide-title bottom-15">
                            <h4 class="bottom-0 center-text"><%=keeper.name%></h4>
                           
                        </div>
                        <div class="store-slide-rating">
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                        </div>
                        <div class="store-slide-price">
                            <strong>$299.99<br> <del>$ 399.99</del></strong>
                            <a href="#"><i class="fa fa-heart color-orange-dark"></i>Add to Wishlist<span
                                    class="color-red1-dark">We're currently out of Stock</span></a>
                            <div class="clear"></div>
                        </div>
                        <div class="store-slide-button">
                            <a id="registerBtn"
                                class="button bg-highlight button-round-large shadow-large button-full button-s uppercase ultrabold">RESERVATION</a>
                        </div>
                    </div>

                </div>
            </div>

            <!-- remover -->


              <div class="content-boxed">
            <div class="content">
                <h3 class="bolder">Keeper Infomation</h3>
                <p></p>               
                <div class="link-list link-list-3">
                    <a href="#" class="round-small shadow-tiny">
                        <i class="fa fa-mobile color-blue2-dark"></i>
                        <span><%=keeper.keeper_phone%></span>
                    </a>
                </div>           
                <div class="link-list link-list-3">
                    <a href="#" class="round-small shadow-tiny">
                        <i class="fa fa-map color-red2-dark"></i>
                        <span><%=keeper.address%></span>
                    </a>
                </div>
                <div class="link-list link-list-3">
                    <a href="#" class="round-small shadow-tiny">
                        <i class="fa fa-info color-green2-dark"></i>
                        <% if(keeper.insurance==1){%>
                            <span>보험 있그</span>
                        <%} else{%> 
                            <span>보험 없그</span>
                        <%}%>    
                    </a>
                </div>
            </div>
        </div>
            <!-- add map -->

            <div class="content-boxed content-boxed-full">
                <div class="responsive-iframe">
                    <!-- <iframe
                        src='https://maps.google.com/?ie=UTF8&amp;ll=47.595131,-122.330414&amp;spn=0.006186,0.016512&amp;t=h&amp;z=17&amp;output=embed'
                        frameborder='0' allowfullscreen>
                    </iframe> -->
                </div>
            </div>

            <!-- review content -->
            <!-- add componet -->
            <div class="content-boxed">
                <div class="content bottom-0">
                    <h4 class="bolder">Review</h4>
                    <p>
                        Check out this keeper's review.
                    </p>
                    <% review.forEach(function(item,index){%>
                    <div class=" blog-list-item">
                        <a href="#">
                            <img class="preload-image round-small shadow-large" src="/images/empty.png"
                                data-src="/images/pictures/11s.jpg" alt="img">
                            <strong><%=item.comment%></strong>
                        </a>
                        <span><i class="fas fa-clock"></i><%= item.create_date %><a href="#"
                                class="color-highlight"><%=item.username %></a></span>
                    </div>

                    <% }); %>
                </div>
            </div>
           
           
            <div class="menu-hider"></div>
        </div>

        <script type="text/javascript" src="/scripts/jquery.js"></script>
        <script type="text/javascript" src="/scripts/plugins.js"></script>
        <script type="text/javascript" src="/scripts/custom.js"></script>
        <script type="text/javascript" src="/scripts/common.js"></script>
        <script>
            var map;

            // Initialize and add the map
            function initMap() {
                // The location of Uluru
                var uluru = {
                    lat: Number.parseFloat(<%=keeper.location_lat%>),
                    lng: Number.parseFloat(<%=keeper.location_lon%>)
                };
                // The map, centered at Uluru
                var map = new google.maps.Map(
                    document.querySelector('.responsive-iframe'), {
                        zoom: 15,
                        center: uluru
                    });
                // The marker, positioned at Uluru
                var marker = new google.maps.Marker({
                    position: uluru,
                    map: map
                });
            }
        </script>
        <script
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBNfdF_uHYQT0Jn8czh4R10flxH8x3G95k&callback=initMap"
            async defer>
        </script>

        <script>
            $("#registerBtn").click(function () {
                var id = $("#registerId").val();
                console.log(id);
                location.href = '/reservation/register/' + id;
            });
        </script>
</body>